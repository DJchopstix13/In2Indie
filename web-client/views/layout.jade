doctype html
html
    head
        title= title
        meta(name ='viewport', content='width=device-width, initial-scale=1.0')
        link(href="//netdna.bootstrapcdn.com/bootstrap/2.3.2/css/bootstrap.min.css", rel="stylesheet")
        link(href='/stylesheets/style.styl', rel='stylesheet')
        link(href="mediaelementplayer.css", rel="stylesheet")
        script(src='//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js')
        script(src='//netdna.bootstrapcdn.com/bootstrap/2.3.2/js/bootstrap.js')
        script(src="mediaelement-and-player.min.js")
        
    body
        div(id='wrap')
            div(class='navbar navbar-default', id='navigation-bar')
                div(class='navbar-inner')
                    ul(class='nav')
                        li: a(href='/') 
                            img(src="/img/in2indie.png", height='50', width='50')
                    ul(class='nav pull-right')
                        li(class='dropdown'): a(href='#', class='dropdown-toggle', data-toggle='dropdown')
                            img(src='/img/settings.png', height='25',width='25')
                            b(class='caret')
                            ul(class='dropdown-menu')
                                li: a(href='/profile') Profile
                                li: a(href='/settings') Settings
                                li: a(href='/logout') Logout
                                 
            div(class='span12', id='main-content')
                block pagetitle
                div(id='page-content')
                    block content

        div(class='navbar navbar-fixed-bottom',id='footer-nav')
            div(class='navbar-inner')
                ul(class='nav pull-right', id='footer-links')
                    li: a(href='/about') about 
                    li: a(href='/FAQ') FAQ 
                    li: a(href='/contact') Contact

   
