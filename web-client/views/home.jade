extends layout

block css
    link(href='/stylesheets/index.styl', rel='stylesheet')

block pagetitle
    div(class='page-title')
        img(src="/img/favicon.png", height='150', width='150')

block content

    div(class='row-fluid')
        center
            //h1 Welcome To In2Indie
            div(id='sample-video')
                iframe(width='560', height='315', src='https://www.youtube.com/embed/E2tMV96xULk', frameborder='0', allowfullscreen='')
            div(class='input-prepend')
                div(class='btn-group')
                    select(id='search-menu', class='span12')
                        option(value='name') Name
                        option(value='brand') Type
                input(name='searchbox', type='text', class='input-xxlarge', placeholder='Browse for')
                a(href='#', id='find-products' class='btn btn-primary' type='button') go

            p To view More Sample, click 
                a(href='/sample-video')  here
            
            br
            div(id='results')
            div(id='product-capsule')            

